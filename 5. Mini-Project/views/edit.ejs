<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit File</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header class="bg-gray-800">
        <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
            <!-- <div class="flex lg:flex-1">
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
                        alt="">
                </a>
            </div> -->
            <div class="flex lg:hidden">
                <button type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                        aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="/" class="text-sm font-semibold leading-6 text-gray-400">HOME</a>
                <a href="#" class="text-sm font-semibold leading-6 text-gray-400">READING</a>
                <a href="#" class="text-sm font-semibold leading-6 text-white">EDIT</a>
                <a href="#" class="text-sm font-semibold leading-6 text-gray-400">Company</a>
            </div>
            <!-- <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                <a href="#" class="text-sm font-semibold leading-6 text-white">Log in <span
                        aria-hidden="true">&rarr;</span></a>
            </div> -->
        </nav>
        <!-- Mobile menu, show/hide based on menu open state. -->
    </header>

    <div class="min-h-screen text-white p-10">
        <div class="max-w-2xl mx-auto bg-gray-700 rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold mb-4">Edit Filename</h1>
            <form action="/edit/<%= filename %>" method="POST">
                <div class="mb-6">
                    <label for="newFilename" class="block text-sm font-medium text-gray-300">New Filename</label>
                    <input type="text" name="newFilename" id="newFilename" value="<%= filename.split('.txt')[0] %>"
                        class="mt-1 p-2 block w-full rounded-md border-gray-600 bg-gray-800 text-white shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit"
                        class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">Save Changes</button>
                    <a href="/" class="inline-block bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</body>
<script src="/js/script.js"></script>

</html>
